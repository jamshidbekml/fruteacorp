model Users {
    id            String              @id @default(uuid()) @db.Uuid
    firstName     String
    lastName      String
    phone         String              @unique
    password      String
    refreshToken  String?
    role          ROLE                @default(user)
    orders        Orders[]
    otps          Otps[]
    promocodes    UserPromocodes[]
    subscriptions UserSubscription[]
    addresses     Address[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
