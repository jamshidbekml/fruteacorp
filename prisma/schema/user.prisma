enum ROLE {
    superadmin
    operator
    packman
    user
}

model Users {
    id            String              @id @default(uuid()) @db.Uuid
    firstName     String
    lastName      String
    phone         String              @unique
    password      String
    refreshToken  String?
    role          ROLE                @default(user)
    Orders        Orders[]
    otps          Otps[]
    promocodes    UserPromocodes[]
    subscriptions UserSubscriptions[]

    createdAt         DateTime            @default(now())
    updatedAt         DateTime            @updatedAt

    @@map("users")
}
